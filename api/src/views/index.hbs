{{> head}}

<!-- Modale création utilisateur -->
<div class="modal fade" id="createUserModal" data-bs-backdrop="static" tabindex="-1"
    aria-labelledby="createUserModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createUserModalLabel">Créer un utilisateur</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/user" method="POST" id="createUserForm">
                    <div class="mb-3">
                        <label for="name" class="form-label">Nom</label>
                        <div class="input-group">
                            <input type="text" class="form-control border border-danger" id="name" name="name">
                            <div class="input-group-append">
                                <span class="input-group-text tt" style="height: 100%;" data-bs-toggle="tooltip"
                                    data-bs-placement="top" title="Obligatoire">
                                    <i class="bi bi-info-circle-fill"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <div class="input-group">
                            <input type="email" class="form-control border border-danger" id="email" name="email">
                            <div class="input-group-append">
                                <span class="input-group-text tt" style="height: 100%;" data-bs-toggle="tooltip"
                                    data-bs-placement="top" title="Obligatoire">
                                    <i class="bi bi-info-circle-fill"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Mot de passe</label>
                        <div class="input-group">
                            <input type="password" class="form-control border border-danger" id="password"
                                name="password">
                            <div class="input-group-append">
                                <span class="input-group-text tt" style="height: 100%;" data-bs-toggle="tooltip"
                                    data-bs-placement="top" title="Obligatoire">
                                    <i class="bi bi-info-circle-fill"></i>
                                </span>
                            </div>
                        </div>

                    </div>
                    <div class="mb-3">
                        <label for="role" class="form-label">Rôle</label>
                        <select class="select2" id="role" name="role" style="width: 100%">
                            <option value="user">User</option>
                            <option value="admin">Admin</option>
                        </select>
                    </div>
                    <div class="pt-3">
                        <button type="submit" class="btn btn-primary" id="createButton">Créer</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-12">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createUserModal">
                Créer un utilisateur
            </button>
        </div>
        <table id="example" class="table" style="width:100%">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Rôle</th>
                    <th>Date de création</th>
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{email}}</td>
                    <td>{{role}}</td>
                    <td>{{createdAt}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

{{> footer}}
<script src="/scripts/backoffice/users/script.js"></script>